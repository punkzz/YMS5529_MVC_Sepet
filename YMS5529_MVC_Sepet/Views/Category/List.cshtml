
@{
    ViewBag.Title = "List";
}

@model List<YMS5529_MVC_Sepet.Models.Category>

<div class="row" style="margin-top:50px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@Html.ActionLink(item.CategoryName, "List", "Product", new { id = item.CategoryID },new { @style="color:tomato"})</td>
                                <td>@item.Description</td>
                                @*<td><a href="~/Product/Index/@item.CategoryID">@item.CategoryName</a></td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
